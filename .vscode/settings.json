{
  "editor.formatOnSave": true,
  "javascript.validate.enable": false,
  "standard.validate": [
    "javascript",
    "javascriptreact",
    "html"
  ],
  "standard.options": {
    "ignore": [
      "node_modules/**"
    ],
    "parser": "vue-eslint-parser",
    "plugins": [
      "html"
    ]
  },
  "standard.validate": [
    "javascript",
    "javascriptreact",
    {
      "language": "html",
      "autoFix": true
    }
  ],
  "standard.autoFixOnSave": true,
  "files.associations": {
    "*.vue": "vue"
  },
  "prettier.singleQuote": true,
  "prettier.semi": false,
}